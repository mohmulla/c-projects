// program that isolates numbers and translates it to english

#include <stdio.h>

int main(void)
{
	int   number = 0;
	int		   n = 0;
	int isolated = 0;
	int   digits = 0;

	// prompt entry
	printf("enter number : ");
	scanf("%i", &number);

	//find digits
	n = number;

	if (n == 0)
	{
		digits++;
	}

	while (n > 0)
	{
		n = n / 10;
		digits++;
	}

	printf("number of digits %i\n", digits);

	// isolate number per digit
	for (digits = digits; digits > 0; digits--)
	{
		isolated = number % (digits * 10);
		number = number / 10;

		switch (isolated)
		{
		case 0:
			printf("zero");
			break;
		case 1:
			printf("one");
			break;
		case 2:
			printf("two");
			break;
		case 3:
			printf("three");
			break;
		case 4:
			printf("four");
			break;
		case 5:
			printf("five");
			break;
		case 6:
			printf("six");
			break;
		case 7:
			printf("seven");
			break;
		case 8:
			printf("eight");
			break;
		case 9:
			printf("nine");
			break;

		}
		printf(" ");
	}
	
	printf("\n");

	return 0;
}
